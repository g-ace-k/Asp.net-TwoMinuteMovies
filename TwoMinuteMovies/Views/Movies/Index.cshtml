@model IEnumerable<TwoMinuteMovies.Models.Movie>

@{
    ViewBag.Title = "Index";
}

<div class="container body-content">

	<h2>Index</h2>

	<p>
		@Html.ActionLink("Create New", "Create")

		@using (Html.BeginForm("Index", "Movies", FormMethod.Get))
		{
		<p>
			Title: @Html.TextBox("SearchString") <br />
			<input type="submit" value="Filter" class="btn btn-primary btn-sm" />
		</p>
		}

		</p>
		<table class="table">
			<tr>
				<th>
					@Html.DisplayNameFor(model => model.Title)
				</th>
				<th>
					Release Date
				</th>
				<th>
					@Html.DisplayNameFor(model => model.Genre)
				</th>
				<th>
					Youtube Link
				</th>
				<th></th>
			</tr>

			@foreach (var item in Model)
			{
				<tr>
					<td>
						@Html.DisplayFor(modelItem => item.Title)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.ReleaseDate)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Genre)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.YoutubeLink)
					</td>
					<td>
						<a role="button" href=@Url.Action("Edit","Movies", new { id = item.ID }) class="btn btn-primary" style="width:80px;">Edit &raquo;</a>
						<a role="button" href=@Url.Action("Details","Movies", new { id = item.ID }) class="btn btn-warning" style="width:80px;">Details &raquo;</a>
						<a role="button" href=@Url.Action("Delete","Movies", new { id = item.ID }) class="btn btn-danger" style="width:80px;">Delete &raquo;</a>
					</td>
				</tr>
			}

		</table>
</div>